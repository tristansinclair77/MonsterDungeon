<UserControl x:Class="MonsterDungeon.Presentation.Views.Game.CombatScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:MonsterDungeon.Presentation.Views.Game"
    xmlns:converters="clr-namespace:MonsterDungeon.Presentation.Converters"
    mc:Ignorable="d" 
    d:DesignHeight="720" d:DesignWidth="1280">
    
    <UserControl.Resources>
    <converters:HexColorToBrushConverter x:Key="HexColorToBrushConverter"/>
    </UserControl.Resources>
  
    <Viewbox Stretch="Uniform">
        <Grid Width="1280" Height="720">
          <Grid.RowDefinitions>
     <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
 </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
   <ColumnDefinition Width="3*"/>  <!-- Left -->
       <ColumnDefinition Width="6*"/>  <!-- Center -->
    <ColumnDefinition Width="3*"/>  <!-- Right -->
         </Grid.ColumnDefinitions>

      <!-- HEADER AREA -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" 
         Background="{Binding DataContext.ThemeManager.WindowBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}" 
    BorderBrush="{Binding DataContext.ThemeManager.ButtonCoreColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
        BorderThickness="0,0,0,2"
      Padding="15,10">
        <TextBlock Text="Monster Dungeon - Combat Mode" 
      FontSize="22" 
        FontWeight="Bold"
               Foreground="{Binding DataContext.ThemeManager.TextMainHeaderColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
HorizontalAlignment="Center"/>
      </Border>

  <!-- ===============================
         LEFT PANEL
 =============================== -->
       <Grid Grid.Row="1" Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
     <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

  <!-- Context Display Area -->
         <Border Grid.Row="0" 
        Background="{Binding DataContext.ThemeManager.WindowBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
    BorderBrush="{Binding DataContext.ThemeManager.WindowSecondaryColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
    BorderThickness="3"
       CornerRadius="5"
      Margin="0,0,0,10">
     <ScrollViewer VerticalScrollBarVisibility="Auto" 
           HorizontalScrollBarVisibility="Disabled"
 Padding="10">
       <StackPanel>
    <TextBlock Text="Context Display Area" 
         FontSize="16" 
        FontWeight="Bold"
      Foreground="{Binding DataContext.ThemeManager.TextMainHeaderColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
   Margin="0,0,0,10"/>
         <TextBlock Text="{Binding SelectedContextMenu, StringFormat='Currently Selected: {0}'}" 
  FontSize="14" 
        Foreground="{Binding DataContext.ThemeManager.WindowTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
            TextWrapping="Wrap"/>
        </StackPanel>
            </ScrollViewer>
     </Border>

         <!-- Action Buttons -->
       <UniformGrid Grid.Row="1" Columns="3" Rows="1">
   <Button Content="Attack" 
   Command="{Binding AttackCommand}"
            Margin="0,0,5,0"
      Background="{Binding DataContext.ThemeManager.ButtonCoreColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
         Foreground="{Binding DataContext.ThemeManager.ButtonTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
           BorderBrush="{Binding DataContext.ThemeManager.ButtonExtrasColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
       BorderThickness="2"
          Padding="10"
           FontSize="14"
   FontWeight="Bold"
            Cursor="Hand"/>

       <Button Content="Spells" 
  Command="{Binding OpenSpellsCommand}"
    Margin="5,0,5,0"
Background="{Binding DataContext.ThemeManager.ButtonCoreColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
       Foreground="{Binding DataContext.ThemeManager.ButtonTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
BorderBrush="{Binding DataContext.ThemeManager.ButtonExtrasColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
 BorderThickness="2"
            Padding="10"
FontSize="14"
       FontWeight="Bold"
Cursor="Hand"/>

            <Button Content="Items" 
    Command="{Binding OpenItemsCommand}"
        Margin="5,0,0,0"
      Background="{Binding DataContext.ThemeManager.ButtonCoreColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
       Foreground="{Binding DataContext.ThemeManager.ButtonTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
    BorderBrush="{Binding DataContext.ThemeManager.ButtonExtrasColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
            BorderThickness="2"
    Padding="10"
   FontSize="14"
         FontWeight="Bold"
           Cursor="Hand"/>
       </UniformGrid>
            </Grid>

 <!-- ===============================
    CENTER PANEL - COMBAT FIELD
         =============================== -->
