        <Border Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1" Margin="1"/>
   </UniformGrid>

   <!-- Center Label -->
   <TextBlock Text="Combat Field" 
    FontSize="32" 
    FontWeight="Bold"
     Foreground="{Binding DataContext.ThemeManager.TextSecondaryHeaderColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
   Opacity="0.3"/>
   </Grid>
 </Border>

 <!-- ===============================
     RIGHT PANEL - PLAYER INFO
                 =============================== -->
         <Grid Grid.Row="1" Grid.Column="2" Margin="10">
    <Grid.RowDefinitions>
         <RowDefinition Height="2*"/>
   <RowDefinition Height="2*"/>
  <RowDefinition Height="3*"/>
    </Grid.RowDefinitions>

           <!-- Player Image -->
              <Border Grid.Row="0" 
               Background="{Binding DataContext.ThemeManager.WindowBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
    BorderBrush="{Binding DataContext.ThemeManager.WindowSecondaryColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
      BorderThickness="3"
            CornerRadius="5"
       Margin="0,0,0,5">
     <TextBlock Text="Player Image" 
    FontSize="16" 
        FontWeight="Bold"
      Foreground="{Binding DataContext.ThemeManager.WindowTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"/>
  </Border>

 <!-- Player Stats -->
                <Border Grid.Row="1" 
    Background="{Binding DataContext.ThemeManager.WindowBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
   BorderBrush="{Binding DataContext.ThemeManager.WindowSecondaryColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
          BorderThickness="3"
       CornerRadius="5"
            Margin="0,5,0,5"
    Padding="10">
             <StackPanel>
     <TextBlock Text="Player Stats" 
FontSize="14" 
      FontWeight="Bold"
  Foreground="{Binding DataContext.ThemeManager.TextMainHeaderColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
           Margin="0,0,0,10"/>
    <TextBlock Text="HP: ---" 
                    FontSize="12" 
          Foreground="{Binding DataContext.ThemeManager.WindowTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
            Margin="0,2"/>
      <TextBlock Text="MP: ---" 
            FontSize="12" 
      Foreground="{Binding DataContext.ThemeManager.WindowTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
Margin="0,2"/>
    <TextBlock Text="Level: ---" 
  FontSize="12" 
                 Foreground="{Binding DataContext.ThemeManager.WindowTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
            Margin="0,2"/>
     </StackPanel>
    </Border>

        <!-- Player Equipment -->
   <Border Grid.Row="2" 
   Background="{Binding DataContext.ThemeManager.WindowBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
BorderBrush="{Binding DataContext.ThemeManager.WindowSecondaryColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
      BorderThickness="3"
     CornerRadius="5"
            Margin="0,5,0,0"
   Padding="10">
  <StackPanel>
           <TextBlock Text="Equipment" 
 FontSize="14" 
