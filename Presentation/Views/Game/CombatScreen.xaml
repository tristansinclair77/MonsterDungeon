<UserControl x:Class="MonsterDungeon.Presentation.Views.Game.CombatScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:MonsterDungeon.Presentation.Views.Game"
    xmlns:converters="clr-namespace:MonsterDungeon.Presentation.Converters"
    mc:Ignorable="d" 
    d:DesignHeight="720" d:DesignWidth="1280">
    
    <UserControl.Resources>
    <converters:HexColorToBrushConverter x:Key="HexColorToBrushConverter"/>
     <converters:GridToPixelConverter x:Key="GridToPixelConverter"/>
    </UserControl.Resources>
  
    <Viewbox Stretch="Uniform">
        <Grid Width="1280" Height="720">
          <Grid.RowDefinitions>
     <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
 </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
   <ColumnDefinition Width="3*"/>  <!-- Left -->
       <ColumnDefinition Width="6*"/>  <!-- Center -->
    <ColumnDefinition Width="3*"/>  <!-- Right -->
         </Grid.ColumnDefinitions>

      <!-- HEADER AREA -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" 
         Background="{Binding DataContext.ThemeManager.WindowBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}" 
    BorderBrush="{Binding DataContext.ThemeManager.ButtonCoreColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
        BorderThickness="0,0,0,2"
      Padding="15,10">
        <TextBlock Text="Monster Dungeon - Combat Mode" 
      FontSize="22" 
        FontWeight="Bold"
               Foreground="{Binding DataContext.ThemeManager.TextMainHeaderColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
HorizontalAlignment="Center"/>
      </Border>

  <!-- ===============================
         LEFT PANEL
 =============================== -->
       <Grid Grid.Row="1" Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
     <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

  <!-- Context Display Area -->
         <Border Grid.Row="0" 
        Background="{Binding DataContext.ThemeManager.WindowBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
    BorderBrush="{Binding DataContext.ThemeManager.WindowSecondaryColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
    BorderThickness="3"
       CornerRadius="5"
      Margin="0,0,0,10">
     <ScrollViewer VerticalScrollBarVisibility="Auto" 
           HorizontalScrollBarVisibility="Disabled"
 Padding="10">
       <StackPanel>
    <TextBlock Text="Context Display Area" 
         FontSize="16" 
        FontWeight="Bold"
      Foreground="{Binding DataContext.ThemeManager.TextMainHeaderColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
   Margin="0,0,0,10"/>
         <TextBlock Text="{Binding SelectedContextMenu, StringFormat='Currently Selected: {0}'}" 
  FontSize="14" 
        Foreground="{Binding DataContext.ThemeManager.WindowTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
  TextWrapping="Wrap"/>
        </StackPanel>
            </ScrollViewer>
     </Border>

         <!-- Action Buttons -->
       <UniformGrid Grid.Row="1" Columns="3" Rows="1">
   <Button Content="Attack" 
   Command="{Binding AttackCommand}"
            Margin="0,0,5,0"
      Background="{Binding DataContext.ThemeManager.ButtonCoreColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
         Foreground="{Binding DataContext.ThemeManager.ButtonTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
           BorderBrush="{Binding DataContext.ThemeManager.ButtonExtrasColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
       BorderThickness="2"
          Padding="10"
           FontSize="14"
   FontWeight="Bold"
            Cursor="Hand"/>

       <Button Content="Spells" 
  Command="{Binding OpenSpellsCommand}"
    Margin="5,0,5,0"
Background="{Binding DataContext.ThemeManager.ButtonCoreColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
       Foreground="{Binding DataContext.ThemeManager.ButtonTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
BorderBrush="{Binding DataContext.ThemeManager.ButtonExtrasColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
 BorderThickness="2"
            Padding="10"
FontSize="14"
       FontWeight="Bold"
Cursor="Hand"/>

            <Button Content="Items" 
    Command="{Binding OpenItemsCommand}"
        Margin="5,0,0,0"
      Background="{Binding DataContext.ThemeManager.ButtonCoreColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
       Foreground="{Binding DataContext.ThemeManager.ButtonTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
    BorderBrush="{Binding DataContext.ThemeManager.ButtonExtrasColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
            BorderThickness="2"
    Padding="10"
   FontSize="14"
         FontWeight="Bold"
           Cursor="Hand"/>
       </UniformGrid>
            </Grid>

 <!-- ===============================
    CENTER PANEL - COMBAT FIELD
         =============================== -->
     <Border Grid.Row="1" Grid.Column="1" 
       Background="{Binding DataContext.ThemeManager.WindowBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
        BorderBrush="{Binding DataContext.ThemeManager.WindowSecondaryColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
       BorderThickness="3"
    CornerRadius="5"
  Margin="10">
     <Viewbox Stretch="Uniform">
   <!-- Combat Grid Container - 8x10 grid (8 columns, 10 rows) -->
  <Grid Width="800" Height="1000" x:Name="CombatGrid">
    <Grid.RowDefinitions>
   <RowDefinition Height="100"/>
       <RowDefinition Height="100"/>
     <RowDefinition Height="100"/>
      <RowDefinition Height="100"/>
       <RowDefinition Height="100"/>
     <RowDefinition Height="100"/>
          <RowDefinition Height="100"/>
          <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
       <RowDefinition Height="100"/>
  </Grid.RowDefinitions>
 <Grid.ColumnDefinitions>
 <ColumnDefinition Width="100"/>
        <ColumnDefinition Width="100"/>
     <ColumnDefinition Width="100"/>
    <ColumnDefinition Width="100"/>
  <ColumnDefinition Width="100"/>
        <ColumnDefinition Width="100"/>
      <ColumnDefinition Width="100"/>
     <ColumnDefinition Width="100"/>
    </Grid.ColumnDefinitions>

      <!-- Row 0 - HIGHLIGHTED FOR TESTING -->
      <Border Grid.Row="0" Grid.Column="0" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
       <Border Grid.Row="0" Grid.Column="1" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
    <Border Grid.Row="0" Grid.Column="2" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
<Border Grid.Row="0" Grid.Column="3" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
   <Border Grid.Row="0" Grid.Column="4" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
     <Border Grid.Row="0" Grid.Column="5" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
 <Border Grid.Row="0" Grid.Column="6" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
    <Border Grid.Row="0" Grid.Column="7" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>

  <!-- Row 1 -->
     <Border Grid.Row="1" Grid.Column="0" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
<Border Grid.Row="1" Grid.Column="1" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
   <Border Grid.Row="1" Grid.Column="2" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
 <Border Grid.Row="1" Grid.Column="3" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
         <Border Grid.Row="1" Grid.Column="4" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
<Border Grid.Row="1" Grid.Column="5" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
    <Border Grid.Row="1" Grid.Column="6" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
      <Border Grid.Row="1" Grid.Column="7" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>

        <!-- Row 2 -->
  <Border Grid.Row="2" Grid.Column="0" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
   <Border Grid.Row="2" Grid.Column="1" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
  <Border Grid.Row="2" Grid.Column="2" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
  <Border Grid.Row="2" Grid.Column="3" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
   <Border Grid.Row="2" Grid.Column="4" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
  <Border Grid.Row="2" Grid.Column="5" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
   <Border Grid.Row="2" Grid.Column="6" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
    <Border Grid.Row="2" Grid.Column="7" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>

 <!-- Row 3 -->
  <Border Grid.Row="3" Grid.Column="0" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
   <Border Grid.Row="3" Grid.Column="1" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
            <Border Grid.Row="3" Grid.Column="2" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
      <Border Grid.Row="3" Grid.Column="3" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
 <Border Grid.Row="3" Grid.Column="4" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
 <Border Grid.Row="3" Grid.Column="5" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
       <Border Grid.Row="3" Grid.Column="6" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
 <Border Grid.Row="3" Grid.Column="7" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>

  <!-- Row 4 -->
<Border Grid.Row="4" Grid.Column="0" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
        <Border Grid.Row="4" Grid.Column="1" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
        <Border Grid.Row="4" Grid.Column="2" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
 <Border Grid.Row="4" Grid.Column="3" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
       <Border Grid.Row="4" Grid.Column="4" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
  <Border Grid.Row="4" Grid.Column="5" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
     <Border Grid.Row="4" Grid.Column="6" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
   <Border Grid.Row="4" Grid.Column="7" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>

 <!-- Row 5 -->
   <Border Grid.Row="5" Grid.Column="0" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
 <Border Grid.Row="5" Grid.Column="1" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
      <Border Grid.Row="5" Grid.Column="2" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
      <Border Grid.Row="5" Grid.Column="3" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
   <Border Grid.Row="5" Grid.Column="4" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
<Border Grid.Row="5" Grid.Column="5" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
<Border Grid.Row="5" Grid.Column="6" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
<Border Grid.Row="5" Grid.Column="7" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>

    <!-- Row 6 -->
      <Border Grid.Row="6" Grid.Column="0" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
 <Border Grid.Row="6" Grid.Column="1" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
  <Border Grid.Row="6" Grid.Column="2" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
  <Border Grid.Row="6" Grid.Column="3" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
       <Border Grid.Row="6" Grid.Column="4" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
  <Border Grid.Row="6" Grid.Column="5" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
   <Border Grid.Row="6" Grid.Column="6" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
     <Border Grid.Row="6" Grid.Column="7" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>

      <!-- Row 7 -->
       <Border Grid.Row="7" Grid.Column="0" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
   <Border Grid.Row="7" Grid.Column="1" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
   <Border Grid.Row="7" Grid.Column="2" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
     <Border Grid.Row="7" Grid.Column="3" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
   <Border Grid.Row="7" Grid.Column="4" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
    <Border Grid.Row="7" Grid.Column="5" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
  <Border Grid.Row="7" Grid.Column="6" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
<Border Grid.Row="7" Grid.Column="7" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>

    <!-- Row 8 -->
            <Border Grid.Row="8" Grid.Column="0" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
         <Border Grid.Row="8" Grid.Column="1" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
            <Border Grid.Row="8" Grid.Column="2" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
            <Border Grid.Row="8" Grid.Column="3" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
       <Border Grid.Row="8" Grid.Column="4" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
            <Border Grid.Row="8" Grid.Column="5" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
            <Border Grid.Row="8" Grid.Column="6" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
     <Border Grid.Row="8" Grid.Column="7" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>

   <!-- Row 9 -->
            <Border Grid.Row="9" Grid.Column="0" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
    <Border Grid.Row="9" Grid.Column="1" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
            <Border Grid.Row="9" Grid.Column="2" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
            <Border Grid.Row="9" Grid.Column="3" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
      <Border Grid.Row="9" Grid.Column="4" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
            <Border Grid.Row="9" Grid.Column="5" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
          <Border Grid.Row="9" Grid.Column="6" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>
       <Border Grid.Row="9" Grid.Column="7" Background="#2a2a4e" BorderBrush="#444466" BorderThickness="1"/>

  <!-- Player Sprite -->
    <Border 
Grid.Row="{Binding PlayerGridY}" 
     Grid.Column="{Binding PlayerGridX}"
    Background="#4CAF50"
  CornerRadius="45"
   Margin="10"
     BorderBrush="#81C784"
  BorderThickness="3"
        Panel.ZIndex="2">
  <TextBlock 
    Text="P" 
    FontSize="48" 
    FontWeight="Bold"
Foreground="White"
HorizontalAlignment="Center"
    VerticalAlignment="Center"/>
</Border>

<!-- Enemy Container - using ItemsControl with Canvas positioning -->
<ItemsControl ItemsSource="{Binding Enemies}" x:Name="EnemyContainer" Panel.ZIndex="1">
    <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
            <!-- Simple Canvas - we'll position manually -->
   <Canvas Width="800" Height="1000"/>
        </ItemsPanelTemplate>
    </ItemsControl.ItemsPanel>
    <ItemsControl.ItemContainerStyle>
        <Style TargetType="ContentPresenter">
        <!-- Position on canvas using pixel coordinates -->
          <Setter Property="Canvas.Left" Value="{Binding X, Converter={StaticResource GridToPixelConverter}}"/>
        <Setter Property="Canvas.Top" Value="{Binding Y, Converter={StaticResource GridToPixelConverter}, ConverterParameter=Y}"/>
        </Style>
    </ItemsControl.ItemContainerStyle>
    <ItemsControl.ItemTemplate>
        <DataTemplate>
       <Border 
 Background="#F44336"
  CornerRadius="45"
     Width="80"
  Height="80"
      Margin="10"
         BorderBrush="#E57373"
      BorderThickness="3">
 <TextBlock 
     Text="E" 
  FontSize="48" 
FontWeight="Bold"
       Foreground="White"
         HorizontalAlignment="Center"
    VerticalAlignment="Center"/>
 </Border>
    </DataTemplate>
    </ItemsControl.ItemTemplate>
</ItemsControl>
   </Grid>
   </Viewbox>
 </Border>

 <!-- ===============================
     RIGHT PANEL - PLAYER INFO
                 =============================== -->
         <Grid Grid.Row="1" Grid.Column="2" Margin="10">
    <Grid.RowDefinitions>
         <RowDefinition Height="2*"/>
   <RowDefinition Height="2*"/>
  <RowDefinition Height="3*"/>
    </Grid.RowDefinitions>

           <!-- Player Image -->
              <Border Grid.Row="0" 
               Background="{Binding DataContext.ThemeManager.WindowBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
    BorderBrush="{Binding DataContext.ThemeManager.WindowSecondaryColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
      BorderThickness="3"
            CornerRadius="5"
       Margin="0,0,0,5">
     <TextBlock Text="Player Image" 
    FontSize="16" 
        FontWeight="Bold"
      Foreground="{Binding DataContext.ThemeManager.WindowTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"/>
  </Border>

 <!-- Player Stats -->
                <Border Grid.Row="1" 
    Background="{Binding DataContext.ThemeManager.WindowBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
   BorderBrush="{Binding DataContext.ThemeManager.WindowSecondaryColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
          BorderThickness="3"
       CornerRadius="5"
            Margin="0,5,0,5"
    Padding="10">
             <StackPanel>
     <TextBlock Text="Player Stats" 
FontSize="14" 
      FontWeight="Bold"
  Foreground="{Binding DataContext.ThemeManager.TextMainHeaderColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
           Margin="0,0,0,10"/>
    <TextBlock Text="HP: ---" 
                    FontSize="12" 
          Foreground="{Binding DataContext.ThemeManager.WindowTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
            Margin="0,2"/>
      <TextBlock Text="MP: ---" 
            FontSize="12" 
      Foreground="{Binding DataContext.ThemeManager.WindowTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
Margin="0,2"/>
    <TextBlock Text="Level: ---" 
  FontSize="12" 
                 Foreground="{Binding DataContext.ThemeManager.WindowTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
            Margin="0,2"/>
     </StackPanel>
    </Border>

        <!-- Player Equipment -->
   <Border Grid.Row="2" 
   Background="{Binding DataContext.ThemeManager.WindowBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
BorderBrush="{Binding DataContext.ThemeManager.WindowSecondaryColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
      BorderThickness="3"
     CornerRadius="5"
            Margin="0,5,0,0"
   Padding="10">
  <StackPanel>
           <TextBlock Text="Equipment" 
 FontSize="14" 
     FontWeight="Bold"
    Foreground="{Binding DataContext.ThemeManager.TextMainHeaderColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
 Margin="0,0,0,10"/>
           <TextBlock Text="Weapon: ---" 
      FontSize="12" 
           Foreground="{Binding DataContext.ThemeManager.WindowTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
           Margin="0,2"/>
            <TextBlock Text="Armor: ---" 
        FontSize="12" 
   Foreground="{Binding DataContext.ThemeManager.WindowTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
        Margin="0,2"/>
 <TextBlock Text="Accessory: ---" 
FontSize="12" 
       Foreground="{Binding DataContext.ThemeManager.WindowTextColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource HexColorToBrushConverter}}"
       Margin="0,2"/>
        </StackPanel>
      </Border>
          </Grid>
 </Grid>
  </Viewbox>
</UserControl>
